import serial
import sys
import time, threading

arduinoNum = "0"

ardSerial = serial.Serial('/dev/ttyACM0', 9600)

def foo():
	ardSerial.write("1")
	time.sleep(5)
	ardSerial.write("2")
	time.sleep(5)
	ardSerial.write("3")
	time.sleep(5)
	ardSerial.write("4")
	time.sleep(5)
	ardSerial.write("5")
	threading.Timer(10, foo).start()

def ph():
	ardSerial.Write("3")
	time.sleep(1)
	threading.Timer(1, ph).start()

ph()
