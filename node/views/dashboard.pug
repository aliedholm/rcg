      integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T'
      crossorigin='anonymous'
    )

    title RUF sensors


  body(ng-controller='angCtrl')
    div.container
      div.jumbotron
        h1 #{database} database
        ul.nav.nav-tabs
          li.nav-item.dropdown
            a.nav-link.dropdown-toggle(data-toggle="dropdown" href="#" aria-haspopup="true" aria-expanded="false") Choose Sensor
              div.dropdown-menu
                each sensor in sensors
                  a.dropdown-item(ng-href='132.239.205.188:8080/api/retrieveTable/sensors-temp1') #{sensor}
          li.nav-item.dropdown
            a.nav-link.dropdown-toggle(data-toggle="dropdown" href="#" aria-haspopup="true" aria-expanded="false") Change Database
              div.dropdown-menu
                a.dropdown-item(href="#") Sensors
                a.dropdown-item(href="#") Logs
                a.dropdown-item(href="#") Settings
        br
        h1 Data from #{table}


